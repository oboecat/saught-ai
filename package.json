{
  "name": "sought-ai",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run build:registry && npm run build:widget && next build",
    "start": "next start",
    "lint": "next lint",
    "build:widget": "npx rollup -c rollup.config.mjs",
    "build:registry": "npx tsx ./scripts/build.ts",
    "release:patch": "npm version patch && npm run build:widget && git add public/ && git commit --amend --no-edit",
    "release:minor": "npm version minor && npm run build:widget && git add public/ && git commit --amend --no-edit",
    "release:major": "npm version major && npm run build:widget && git add public/ && git commit --amend --no-edit",
    "widget:dev": "npm run build:widget && echo 'Widget built for testing'"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.511.0",
    "next": "15.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@preact/compat": "^18.3.1",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@rollup/plugin-virtual": "^3.0.2",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.5",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "postcss": "^8.5.4",
    "postcss-import": "^16.1.0",
    "rollup": "^2.79.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^4.1.8",
    "tslib": "^2.8.1",
    "tsx": "^4.19.2",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5"
  }
}
